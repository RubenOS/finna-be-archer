cuenta macro A
	mov al,A
	cmp al,30h
	JB CARACESP ;SI AL<30H es un c.especial
	CMP AL, 39H
	JA MAYUSCULAS
	add [nu],1
	jmp contados
	MAYUSCULAS:
	CMP AL, 41H ;O CMP AL, 'A'
	JB CARACESP	;SI AL<41H FIN
	CMP AL, 5AH ;O CMP AL,'Z'
	JA MINUSCULAS	;SI AL>5AH
	add [ma],1
	jmp contados
	MINUSCULAS:
	CMP AL, 61H
	JB CARACESP
	CMP AL, 7AH
	JA CARACESP
	MOV AH,2H
	add [mi],1
	jmp contados
	CARACESP:
	add [cesp],1
	contados:
endm
LEE macro
	mov bl,es:[80h]
		mov si,82h
		mov di,0
	leer:
		CMP CONTRA[di],'$'
		JE win 
		mov al,es:[si]
		cmp al,CONTRA[di]
		jne fail
		inc si
		inc di
		jmp leer
endm

SWITCH macro
	mov al,es:[8Ah]
	cmp al,'c'
	je CO1 ;codifica
	cmp al,'C'
	je CO1 ;codifica
	cmp al,'d'
	je CO2 ;decodifica
	cmp al,'C'
	je CO2 ;decodifica
	jmp finswitch
	CO1:
		CMP cara,0FFH  ;CARACTER 255
        	JE RESTA
        	CMP cara,0FEH      ;254
        	JE RESTA
        	CMP cara,0FDH        ;253
        	JE RESTA
        	ADD cara,3H
			jmp finswitch
		RESTA:
			SBB cara,223D   
		jmp finswitch
	CO2:
		CMP cara,032H  ;CARACTER 32
        	JE SUMA
        	CMP cara,033H      ;33
        	JE SUMA
        	CMP cara,034H        ;34
        	JE SUMA
        	SBB cara,3H
			jmp finswitch
		SUMA:
			ADD cara,223D 
	finswitch:
endm
