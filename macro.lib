DESP macro A
	lea dx,A
	mov ah,09h
	int 21h
endm
DESPC macro A
	mov ah,02h
	mov dl,A
	int 21h
endm

LEE macro
	mov bl,es:[80h]
		mov si,82h
		mov di,0
	leer:
		CMP CONTRA[di],'$'
		JE win 
		mov al,es:[si]
		cmp al,CONTRA[di]
		jne fail
		inc si
		inc di
		jmp leer
endm

SWITCH macro
	mov al,es:[8Ah]
	cmp al,'c'
	je CO1 ;codifica
	cmp al,'C'
	je CO1 ;codifica
	cmp al,'d'
	je CO2 ;decodifica
	cmp al,'C'
	je CO2 ;decodifica
	jmp noopc
	CO1:
		jmp finswitch
	CO2:
		jmp finswitch
	noopc:
	finswitch:
endm
