DESP macro A
	lea dx,A
	mov ah,09h
	int 21h
endm

LEE macro
	mov bl,es:[80h]
		mov si,82h
		mov di,0
	leer:
		CMP CONTRA[di],'$'
		JE win 
		mov al,es:[si]
		cmp al,CONTRA[di]
		jne fail
		inc si
		inc di
		jmp leer
endm

SWITCH macro
	mov al,es:[8Ah]
	cmp al,'d'
	je CO1 ;Cambia Opcion a 1
	cmp al,'D'
	je CO1 ;Cambia Opcion a 1
	cmp al,'c'
	je CO2 ;cambia opcion a 2
	cmp al,'C'
	je CO2 ;cambia opcion a 2
	jmp noopc
	CO1:
		mov opc,0
		jmp pasosig
	CO2:
		mov opc,1
	pasosig:
	mov al,opc
	cmp al,00h
	je codif
	je decodif
	codif:	;todo el codigo para codificar
		desp cod
		jmp finswitch
	decodif:	;todo el codigo para decodificar
		desp decod
		jmp finswitch
	noopc:
		desp errop
	finswitch:
endm
