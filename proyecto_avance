include macro.lib
.model small 
.data
  nomvar db ?
	fail1 db 'error $' 
	win1 db 'contraseña correcta$'
	CONTRA db 'PELUCAS$'
.stack
.code
	inicio:
		mov ax,@data
		mov ds,ax
		LEE	;llama macro para leer la contraseña que recibe como argumento
	fail:
		desp fail1 ;desp recibe una variable dw y la escribe en pantalla
		jmp fin
	win:
		desp win1
		jmp fin
	fin:
		mov ah,4ch
		int 21h
	end inicio
