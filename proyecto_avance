.model small 
.data
  nomvar db ?
	fail1 db 'error $' 
	win1 db 'contrase√±a correcta$'
	CONTRA db 'PELUCAS$'
.stack
.code
	inicio:
		mov ax,@data
		mov ds,ax
		mov bl,es:[80h]
		mov si,82h
		mov di,0
	lee:
		CMP CONTRA[di],'$'
		JE win 
		mov al,es:[si]
		cmp al,CONTRA[di]
		jne fail
		inc si
		inc di
		jmp lee
	fail:
		lea dx,fail1
		mov ah,9h
		int 21h
		jmp fin
	win:
		lea dx,win1
		mov ah,9h
		int 21h
		jmp fin
	fin:
		mov ah,4ch
		int 21h
	end inicio
